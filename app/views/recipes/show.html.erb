<section class="recipe-list">
  <h1><%= @recipe.name %></h1>
  <div class="recipe-detail">
    <div>
      <p>Preparation Time: <%= @recipe.preparation_time %></p>
      <p>Cooking Time: <%= @recipe.cooking_time %></p>
    </div>
    <div>
      <label>Public</label>
      <label class="switch">
        <input type="checkbox">
        <span class="slider round"></span>
      </label>
    </div>
  </div>
  <h2>Steps go Here...</h2>
  <div class="recipe-detail">
    <button type="button" class="long-btn">Generate Shopping List</button>
    <button type="button" class="long-btn">Add Ingredients</button>
  </div>

  <br>
  <h3 style="text-align: center">Ingredient List</h3>

  <table id = "customers">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
    </thead>
  </table>
</section>
<%= render "layouts/shopping_list" %>
