<section class="recipe-list">
  <h1><%= @recipe.name %></h1>
  <div class="recipe-detail">
    <div>
      <p>Preparation Time: <%= @recipe.preparation_time %></p>
      <p>Cooking Time: <%= @recipe.cooking_time %></p>
    </div>
    <div>
      <label>Public</label>
      <label class="switch">
        <input type="checkbox">
        <span class="slider round"></span>
      </label>
    </div>
  </div>
  <h2>Steps go Here...</h2>
  <div class="recipe-detail">
    <button type="button" class="long-btn">Generate Shopping List</button>
    <%= button_to "Add Ingredients", new_recipe_recipe_food_path(@recipe.id) , method: :get, class: "long-btn" %>
  </div>

  <table id = "customers">
    <thead>
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Value</th>
        <th>Actions</th>
      </tr>
      <% if @recipe.recipe_food.any? %>
        <% @recipe.recipe_food.each do |recipe_food| %>
          <tr>
            <th> <%= recipe_food.name %> </th>
            <th> <%= recipe_food.quanity %> </th>
            <th> <%= recipe_food.get_food_price * recipe_food.quanity  %> </th>
            <th> 
              <%= button_to "Delete Food", "/recipes/#{@recipe.id}/recipe_food/#{recipe_food.id}" , method: :delete, class: "long-btn" %>
            </th>
          </tr>
        <% end %>
      <% else %>
        <tr>
          <th> No food has been added to this recipe </th> 
        </tr>
      <% end %>
    </thead>
    <tbody>
    </tbody>
  </table>
</section>